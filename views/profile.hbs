                <form action="/uploadCV" method="post" enctype='multipart/form-data'>
                    <!-- HIDDEN LABEL FOR THE INDEX OF THE VACANCY -->
                    <input type = "text" class="vac-index" id = "vacID" name = "vacID" style="display: none;">
                    <br/>
                    <label for="jobDoc" class="btn btn-secondary btn-block btn-outlined">Upload Your CV</label>
                    <input id="jobDoc" type="file" name="myImage" style="display: none"/>
                    <button type="submit" class="btn btn-primary btn-block btn-outlined" >Apply</button>
                </form>
            </div>
            
        </div>
    </div>
